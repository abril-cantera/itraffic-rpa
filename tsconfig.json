{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["office-js"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "../backend/src/services/rpa", "../backend/src/services/browser.js", "../backend/src/services/helpers.js", "../backend/src/services/logger.js"],
  "exclude": ["node_modules", "dist"]
}
